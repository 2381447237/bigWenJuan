<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"
            >

            <corners
                android:radius="5dp"
                />

            <gradient
                android:startColor="@color/dl3"
                android:endColor="@color/dl4"
                android:angle="90"
                />

        </shape>

    </item>
    <item>

        <shape android:shape="rectangle"
            >

            <corners
                android:radius="5dp"
                />

            <gradient
                android:startColor="@color/dl1"
                android:endColor="@color/dl2"
                android:angle="90"
                />

        </shape>


    </item>

</selector>